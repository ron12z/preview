---
// Components import
import MainLayout from "../layouts/MainLayout.astro";

// Data import
import RestrictionList from "../components/RestrictionList.astro";

// CSS import
import "../styles/global.css";

const title = "Escalator v2";
---

<MainLayout title={title}>
	<RestrictionList />
</MainLayout>

<script>
	// Any click on the page will update the result
	import Escalation from "../scripts/escalation";
	document.querySelector("html")!.addEventListener("click", () => {
		Escalation.updateResult();
	});
</script>

<script src="../scripts/addMore"></script>
<script src="../scripts/copyEscalation"></script>
