<div class="text-group">
	<h4 class="desc">Tasks Cleared</h4>
	<div class="text-wrapper">
		<div class="clickable">
			<p class="text" id="cleared">
				FBG Withdrawals Handled by MNL Team <b>CLEARED</b> - Updated as of [timeNow]
			</p>
		</div>
	</div>
</div>

<script>
	import { getCurrentTime } from "../../scripts/miscUtils";

	function updateCleared() {
		const cleared = document.querySelector("#cleared")!;
		const currentTime = getCurrentTime();
		cleared.innerHTML = `Tasks <b>CLEARED</b> - Updated as of ${currentTime}`;
	}

	updateCleared();
	setInterval(updateCleared, 1000);
</script>
